# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# The system automatically selects database type based on NODE_ENV:
# - development: SQLite (default)
# - production: PostgreSQL (default)
# Set DATABASE_TYPE to override environment-based defaults
# Options: sqlite, postgresql
# DATABASE_TYPE=sqlite

# SQLite Configuration (recommended for development)
# Use file-based database for persistence across restarts
SQLITE_FILENAME=./data/development.db
# Enable WAL mode for better concurrent access (optional)
SQLITE_WAL=true
# For testing, you can use in-memory database:
# SQLITE_FILENAME=:memory:

# PostgreSQL Configuration (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/relationship_care_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=relationship_care_platform
DB_USER=username
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Supabase Configuration (alternative to PostgreSQL)
# Use this for managed PostgreSQL hosting
# SUPABASE_DB_URL=postgresql://postgres:[password]@[project-ref].pooler.supabase.com:5432/postgres
# When using Supabase, the above individual DB_* variables are ignored

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Email Integration - Gmail OAuth
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/email/oauth/callback/gmail

# Email Integration - Outlook OAuth
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/email/oauth/callback/outlook

# Email Integration - Exchange OAuth
EXCHANGE_CLIENT_ID=your-exchange-client-id
EXCHANGE_CLIENT_SECRET=your-exchange-client-secret
EXCHANGE_REDIRECT_URI=http://localhost:3000/api/email/oauth/callback/exchange

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3001

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com
TWILIO_ENABLE_RECORDING=true
TWILIO_ENABLE_TRANSCRIPTION=true
TWILIO_TRANSCRIPTION_ACCURACY_THRESHOLD=0.95

# Voice Processing Configuration
ASSEMBLYAI_API_KEY=your-assemblyai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# NLP Configuration
GROK_API_KEY=your-grok-api-key
GROK_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-beta
NLP_DEFAULT_LANGUAGE=en
NLP_VECTOR_SEARCH_ENABLED=true

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=relationship-care-platform
KEYCLOAK_CLIENT_ID=rcp-client
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret